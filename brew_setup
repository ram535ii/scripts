#!/bin/bash

# install brew
echo 'Installing brew'
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

# GnuPG
brew install gnupg gnupg2

# Redis
brew install redis

# Python
brew install python

# Miscellaneous packages for goodness
brew install tree
brew install ctags
brew install macvim
brew install wget
