{
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "<C-e>"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [
        "<C-e>"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": [
        "g",
        "d"
      ],
      "commands": [
        "editor.action.revealDefinition"
      ]
    }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [],
  "vim.textwidth": 120,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
  },
  "files.associations": {
    "**/*.xml.jinja": "jinja-xml",
    "**/*.tsx.jinja": "jinja-js",
    "**/templates/**/*.{txt,md}": "jinja",
    "**/plans/templates/*/**/*.{txt,md}": "jinja"
  },
  "terminal.integrated.scrollback": 100000,
  "editor.rulers": [
    120
  ],
  "workbench.colorTheme": "Solarized Dark",
  "gitlens.mode.active": "review",
  "editor.cursorBlinking": "solid",
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#d2c61ff5"
  },
  "security.promptForLocalFileProtocolHandling": false,
  "git.openRepositoryInParentFolders": "always",
  "editor.renderWhitespace": "trailing",
  "files.trimTrailingWhitespace": true,
  "terminal.integrated.copyOnSelection": true,
  "git.autofetch": true,
  "githubPullRequests.pullBranch": "never",
  "window.commandCenter": 1,
  "go.languageServerFlags": [
    "serve",
    "-rpc.trace",
    "--debug=localhost:6060",
  ],
  "gopls": {
    "build.directoryFilters": [
      "-vendor",
      "-manifests",
      "-static-check-rules"
    ],
    "formatting.local": "github.com/monzo"
  },
  "files.insertFinalNewline": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {},
  "editor.snippets.codeActions.enabled": false,
  "go.lintOnSave": "file",
  "go.survey.prompt": false,
  "go.testExplorer.enable": false,
  "go.testExplorer.concatenateMessages": false,
  "go.lintTool": "golint",
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "go.formatTool": "goimports",
  "go.toolsEnvVars": {
    "GO111MODULE": "auto"
  },
  // this helps vscode automatically import protos
  "protoc": {
    "options": [
      "--proto_path=${env.GOPATH}/src"
    ]
  }
}
